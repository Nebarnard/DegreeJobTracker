@model Job
@{
    ViewData["Title"] = $"Job Tracker - Delete {Model.JobTitle}";
}
<div class="row justify-content-center">
    <div class="col-md-4 row">
        <h1 class="ws-blue-color text-center mt-5">Confirm Deletion</h1>
        <h1 class="ws-blue-color text-center mb-5">Delete Job: @Model.JobTitle</h1>

        <form asp-action="DeleteJob" method="post">
            <input type="hidden" asp-for="JobId" />

            <div class="col row align-self-center">
                <a asp-controller="Admin" asp-action="Cancel" class="ms-3 col-12 text-nowrap text-center ws-red-bg col ws-red-btn mb-3">Cancel</a>
                <button type="submit" class="ms-3 col-12 text-nowrap ws-blue-bg col ws-blue-btn">Delete</button>
            </div>
        </form>
    </div>
</div>
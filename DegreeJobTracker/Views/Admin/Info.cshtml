@model DegreeJobTracker.Models.ViewAllInfoViewModel

@{
    ViewData["Title"] = "Info";
}

<div class="row">
    <h1 class="row col justify-content-center ws-blue-color">@Model.Name</h1>
    <a asp-action="Person" asp-controller="Admin" class="justify-content-center btn ws-blue-btn mb-5">Edit Person</a>
</div>

<div class="row">
    <div class="col card">
        <h2>Degrees</h2>
        <table class="table table-responsive table-hover table-bordered card-body">
            <thead>
                <tr class="fw-bold">
                    <td>Degree</td>
                    <td>Year Awarded</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var degree in Model.Degrees) {
                    <tr>
                        <td>@degree.Type @degree.Major</td>
                        <td>@(degree.YearAwarded != null ? degree.YearAwarded : "Unknown")</td>
                        <td><i class="fas fa-edit ws-blue-color"></i>&nbsp;<i class="fas fa-trash ws-red-color"></i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col card">
        <h2>Jobs</h2>
        <table class="table table-responsive table-hover table-bordered card-body">
            <thead>
                <tr class="fw-bold">
                    <td>Job Title</td>
                    <td>Business Name</td>
                    <td>Salary</td>
                    <td>Description</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model.Jobs) {
                    <tr>
                        <td>@job.JobTitle</td>
                        <td>@job.BusinessName</td>
                        <td>@job.Salary.ToString()</td>
                        <td>@job.Description</td>
                        <td><i class="fas fa-edit ws-blue-color"></i>&nbsp;<i class="fas fa-trash ws-red-color"></i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
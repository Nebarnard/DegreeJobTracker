@model List<DegreeJobPersonAdminViewModel>
@{
    ViewData["Title"] = "Admin";
}

<div class="row mt-3">
    <div class="col-md-2">
        <!-- Search Job Bar -->
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search Job" aria-label="Search Job" aria-describedby="basic-addon-job">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <!-- Search Business Bar -->
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search Business" aria-label="Search Business" aria-describedby="basic-addon-business">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <!-- Search Salary Bar -->
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search Salary" aria-label="Search Salary" aria-describedby="basic-addon-salary">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <!-- Degree Type Dropdown -->
        <div class="form-group">
            <label for="degreeType" class="d-block">Degree Type</label>
            <select class="form-control" id="degreeType">
                <option value="bachelors">Bachelor's</option>
                <option value="masters">Master's</option>
                <option value="phd">PhD</option>
            </select>
        </div>
    </div>
    <div class="col-md-2">
        <!-- Search Degree Concentration Bar -->
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search Degree Concentration" aria-label="Search Degree Concentration" aria-describedby="basic-addon-concentration">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
        </div>
    </div>
    <!-- Add Person Button -->
    <div class="col-md-2">
        <button class="btn ws-blue-bg col mx-3 ws-blue-btn" type="button">Add Person</button>
    </div>
    
    <table class="table table-responsive table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Highest Degree</td>
                <td>Current Job</td>
                <td>Current Salary</td>
                <td>View All Info</td>
                <td>Action</td>
            </tr>
        </thead>
    @foreach (var person in Model) {
        <tr>
            <td>@person.Name</td>
            <td>@person.Degree</td>
            <td>@person.Job</td>
            <td>@person.Salary.ToString("C2")</td>
            <td><a asp-action="Info" asp-controller="Admin" asp-route-id ="@person.PersonId" class="btn ws-blue-btn">View All Info</a></td>
            <td><i class="fas fa-edit ws-blue-color"></i>&nbsp;<i class="fas fa-trash ws-red-color"></i></td>
        </tr>
    }
    </table>
</div>
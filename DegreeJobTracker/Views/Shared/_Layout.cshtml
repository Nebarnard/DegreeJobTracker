<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DegreeJobTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/popper.js/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body style="position: relative; min-height: 100vh;">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="logo">
                    <!-- Replace 'logo-placeholder.png' with the actual path to your logo -->
                    <img src="~/Images/bestlogo.png" class="img" alt="Degree Job Tracker Logo" />
                </div>
                <div class="navbar-brand mx-auto">DegreeJobTracker</div>
                <div class="login-button">
                    <a asp-action="Login" class="ws-blue-btn">Login</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted" style="position: absolute; bottom: 0; width: 100%;">
        <div class="container">
            &copy; 2024 - DegreeJobTracker - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>

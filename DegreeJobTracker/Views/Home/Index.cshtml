@model List<HomeViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-3">

    <div class="row">
        <div class="col-md-2">
            <!-- Search Job Bar -->
            <input type="text" class="form-control" placeholder="Search Job" aria-label="Search Job">
        </div>
        <div class="col-md-2">
            <!-- Search Business Bar -->
            <input type="text" class="form-control" placeholder="Search Business" aria-label="Search Business">
        </div>
        <div class="col-md-2">
            <!-- Search Salary Bar -->
            <input type="text" class="form-control" placeholder="Search Salary" aria-label="Search Salary">
        </div>
        <div class="col-md-2">
            <!-- Degree Type Dropdown -->
            <!-- Assuming the same style for dropdown as provided -->
            <select class="form-control" id="degreeType">
                <option value="bachelors">Bachelor's</option>
                <option value="masters">Master's</option>
                <option value="phd">PhD</option>
            </select>
        </div>
        <div class="col-md-2">
            <!-- Search Degree Concentration Bar -->
            <input type="text" class="form-control" placeholder="Search Degree Concentration" aria-label="Search Degree Concentration">
        </div>
        <div class="col-md-2">
            <!-- Add Person Button, assuming this remains as per your new style -->
            <button class="btn btn-primary" type="button">Search</button>
        </div>
    </div>

        <!-- Table -->
    <div class="row mt-4">
        <div class="col">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Job</th>
                        <th>Business</th>
                        <th>Salary</th>
                        <th>Description</th>
                        <th>Degree</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var job in Model) {
                        <tr>
                            <td>@job.Job</td>
                            <td>@job.Business</td>
                            <td>@job.Salary</td>
                            <td>@job.Description</td>
                            <td>@job.Degree</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

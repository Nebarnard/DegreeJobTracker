@{
    ViewData["Title"] = "Admin";
    Layout = null; // Set layout to null to override the shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DegreeJobTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/popper.js/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body style="position: relative; min-height: 100vh;">
    <!-- Add styles here -->
    <!-- Change here -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="logo">
                    <!-- Replace 'logo-placeholder.png' with the actual path to your logo -->
                    <img src="~/Content/Images/logo-placeholder.png" alt="Degree Job Tracker Logo" />
                </div>
                <div class="navbar-brand mx-auto">DegreeJobTracker</div>

                <!-- Additional Links -->
                <div class="text-center">
                    <a href="@Url.Action("JobList", "Admin")" class="btn btn-link" style="text-decoration:none; color:black">Job List</a>
                    <a href="@Url.Action("PersonList", "Admin")" class="btn btn-link" style="text-decoration:none; color:black">Person List</a>
                    <a href="@Url.Action("AddPerson", "Admin")" class="btn btn-link" style="text-decoration:none; color:black">Add Person</a>
                </div>
                <div class="login-button">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Logout</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <!-- Your Admin content goes here -->
        </div>
    </div>

    <footer class="border-top footer text-muted" style="position: absolute; bottom: 0; width: 100%;">
        <div class="container">
            &copy; 2024 - DegreeJobTracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
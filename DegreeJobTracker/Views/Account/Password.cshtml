@model PasswordViewModel
<!-- Alignment Stuff -->
<div class="row justify-content-center">
    <div class="col-md-4 row">
        <!-- Title Bar -->
        <h1 class="ws-blue-color text-center my-5">Change Password</h1>

        <!-- Form to Post-->
        <form asp-action="Password" method="post">
            <div asp-validation-summary="All" class="ws-red-color text-center mb-4"></div>

            <!-- Password -->
            <div class="col align-self-center mb-3">
                <label asp-for="Password" class="form-label">Password:</label>
                <input asp-for="Password" class="form-control">
            </div>

            <!-- Buttons -->
            <div class="col row align-self-center">
                <a asp-controller="Account" asp-action="Index" class="ms-3 col-12 text-nowrap text-center ws-red-bg col ws-red-btn mb-3">Cancel</a>
                <button type="submit" class="ms-3 col-12 text-nowrap ws-blue-bg col ws-blue-btn">Change Password</button>
            </div>
        </form>
    </div>
</div>
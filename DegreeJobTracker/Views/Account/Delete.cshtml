@model UserCredential
@{
    ViewData["Title"] = $"Degree Job Tracker - Delete User";
}
<!-- Alignment Stuff -->
<div class="row justify-content-center">
<div class="col-md-4 row"> 
    <!-- Title Bar -->
    <h1 class="ws-blue-color text-center mt-5">Are you sure you want to delete your account?</h1>
    <h5 class="ws-red-color text-center">Doing so will log you out.</h5>
    <h1 class="ws-blue-color text-center mb-5">Delete @Context.Session.GetString("Username")?</h1>

    <!-- Form to Post-->
    <form asp-action="Delete" method="post">

        <!-- Buttons -->
        <div class="col row align-self-center">
            <a asp-controller="Account" asp-action="Index" class="ms-3 col-12 text-nowrap text-center ws-red-bg col ws-red-btn mb-3">Cancel</a>
            <button type="submit" class="ms-3 col-12 text-nowrap ws-blue-bg col ws-blue-btn">Delete</button>
        </div>
    </form>
</div>
</div>
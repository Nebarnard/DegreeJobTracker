@model UsernameViewModel
<!-- Alignment Stuff -->
<div class="row justify-content-center">
<div class="col-md-4 row"> 
    <!-- Title Bar -->
    <h1 class="ws-blue-color text-center my-5">Change Username</h1>

    <!-- Form to Post-->
    <form asp-action="Username" method="post">
        @{
            if ((string)ViewData["Error"] != string.Empty) {
                <div class="text-center mb-4">
                    <p class="ws-red-color">@ViewData["Error"]</p>
                </div>
            }
        }

        <!-- Username -->
        <div class="col align-self-center mb-3">
            <label asp-for="Username" class="form-label">Username:</label>
            <input asp-for="Username" class="form-control">
        </div>

        <!-- Buttons -->
        <div class="col row align-self-center">
            <a asp-controller="Account" asp-action="Index" class="ms-3 col-12 text-nowrap text-center ws-red-bg col ws-red-btn mb-3">Cancel</a>
            <button type="submit" class="ms-3 col-12 text-nowrap ws-blue-bg col ws-blue-btn">Change Username</button>
        </div>
    </form>
</div>
</div>